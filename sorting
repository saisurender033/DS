#include<stdio.h>
void selectionsort(int a[30], int n)
{
    int i,temp,j;
    int minps=0;
    for(i=0;i<n;i++)
    {
        minps=i;
        for(j=i+1;j<n;j++)
        {
            if(a[minps]>a[j])
            {
                minps=j;
            }
            
        }
        temp=a[minps];
        a[minps]=a[i];
        a[i]=temp;
    }
    printf("array after sorted :  ");
    for(i=0;i<n;i++)
    {
        printf("%d ",a[i]);
    }
}
void main()
{
    int n,i;
    printf("enter the size of the array ");
    scanf("%d",&n);
    int a[n];
    printf("enter the elements in the array");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    selectionsort(a,n);
}







// insertion sorting 

#include <stdio.h>
void insertionsort(int a[20] , int n)
{
    int i,temp,j;
    for(i=1;i<n;i++)
    {
        temp=a[i];
        j=i;
        while(j>0 && temp<a[j-1])
        {
            a[j]=a[j-1];
            j--;
        }
        a[j]=temp;
    }
    for(i=0;i<n;i++)
    {
        printf("%d",a[i]);
    }
}
void main()
{
    int n,i;
    printf("enter the size of the array ");
    scanf("%d",&n);
    int a[n];
    printf("enter the elements in the array");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    insertionsort(a,n);
}




//BubbleSort

#include<stdio.h>
void BubbleSort(int a[], int n)
{
int t,i,j;
for(i=0; i < n-1; i++)
for(j = 0; j < n-i-1; j++)
if (a[j] < a[j+1])
 {
 t = a[j];
 a[j] = a[j+1];
 a[j+1] = t;
 }
 printf("array after sorted :  ");
    for(i=n-1;i>=0;i--)
    {
        printf("%d ",a[i]);
    }
}

void main()
{
    int n,i;
    printf("enter the size of the array ");
    scanf("%d",&n);
    int a[n];
    printf("enter the elements in the array");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    BubbleSort(a,n);
}
