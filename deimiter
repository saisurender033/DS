#include<stdio.h>
#include<ctype.h>
#include<math.h>
# define max 20
char a[max];
int top=-1;
void push(char c)
{
        a[++top]=c;
}
char pop()
{
        return a[top--];
}
int main()
{
        char exp[max],c,x;
        int flag=0;
        int i=0;
        printf("enter the expression for delimitor matching ");
        scanf("%s",exp);
        while(exp[i]!='\0')
        {
                c=exp[i];
                if ( c=='(' || c=='['||c=='{')
                {
                        push(c);
                }
                else if (c==')'||c==']'||c=='}')
                {
                        if (top==-1)
                        {
                                flag=0;
                                break;
                        }
                        else
                        {
                                x=pop();
                                if ((x=='(' && c==')')||( x=='[' && c==']')||( x=='{' && c=='}'))
                                {
                                        flag=1;
                                }
                                else
                                {
                                        flag=0;
                                        break;
                                }
                        }

                }
                i++;
        }
        if (top!=-1)
        {
                flag=0;
        }
        if (flag==1)
        {
                printf("Matched");
        }
        else
        {
                printf(" not matched");
        }

}
